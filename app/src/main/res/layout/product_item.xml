<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_weight="1"
            app:cardCornerRadius="10dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="7dp"
                android:gravity="center_horizontal"
                android:background="@color/white">

                <ImageView
                    android:id="@+id/product1image"
                    android:layout_width="120dp"
                    android:layout_height="107dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/pizza" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginHorizontal="5dp">

                    <TextView
                        android:id="@+id/product1Name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Cheeseburger"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/product1Brand"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Wendy's Burger"
                        android:textSize="12sp"
                        android:textColor="#777777"
                        android:layout_marginTop="1dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp"
                    android:gravity="start"
                    android:layout_marginHorizontal="5dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp">
                            <TextView
                                android:id="@+id/product1Price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="₹ 29.99"
                                android:textColor="@color/black"
                                android:textSize="14sp"
                                android:gravity="center_vertical" />

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:src="@drawable/ic_star"
                                android:tint="@color/dark_yellow"
                                android:layout_marginTop="2dp"/>

                            <TextView
                                android:id="@+id/product1rating"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="3dp"
                                android:text="4.9"
                                android:textColor="@color/black"
                                android:textSize="12sp" />
                        </LinearLayout>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="5dp"
                        android:gravity="right">

                        <Button
                            android:id="@+id/add_to_cart1"
                            android:layout_width="74dp"
                            android:layout_height="38dp"
                            android:backgroundTint="@color/red"
                            android:paddingHorizontal="1dp"
                            android:paddingVertical="0dp"
                            android:text="Add"
                            android:textColor="@android:color/white"
                            app:cornerRadius="7dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_weight="1"
            app:cardCornerRadius="10dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="7dp"
                android:gravity="center_horizontal"
                android:background="@color/white">

                <ImageView
                    android:id="@+id/product2image"
                    android:layout_width="120dp"
                    android:layout_height="107dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/burger" />

                <LinearLayout
