<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/imageOrderItem"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:src="@drawable/pizza"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp">

            <TextView
                android:id="@+id/txtOrderNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Order#: 999012"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txtOrderDateTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20-Dec-2019, 3:00 PM"
                android:textColor="#666666"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txtDeliveryStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Estimated Delivery on 21 Dec"
                android:textColor="#43A047"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">

                <TextView
                    android:id="@+id/txtRatingLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rating: "
                    android:textSize="14sp"
                    android:textColor="#444" />

                <!-- Star Icons -->
                <ImageView
                    android:id="@+id/star1"
                    android:layout_height="12dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:src="@drawable/star"/>
                <ImageView
                    android:id="@+id/star2"
                    android:layout_height="12dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:src="@drawable/star"/>
                <ImageView
                    android:id="@+id/star3"
                    android:layout_height="12dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:src="@drawable/star"/>
                <ImageView
                    android:id="@+id/star4"
                    android:layout_height="12dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:src="@drawable/star"/>
                <ImageView
                    android:id="@+id/star5"
                    android:layout_height="12dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:src="@drawable/star"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
